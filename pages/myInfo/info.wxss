/* pages/myInfo/info.wxss */
.loginPage{
    background-color: black;
    height: 800%;
}
.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: row;  
  align-items: left;  
  background-color: rgb(51,51,51);   
  font-size: 14px;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.userName{
    font-size: 20px;
}
.userData{
  position: relative;  
  display: flex;  
  font-size: 14px;
  margin: 20rpx;  
  margin-top: 50rpx;  
  flex-direction: column;
}
.enterIcon{
  position: absolute;  
  display: flex;  
  font-size: 14px;
  margin-top: 120rpx;  
  right: 20rpx;  
}